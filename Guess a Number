	<style>
	#name{
		background-color:#0F2431;
		color:white;
		text-align:center;
		padding:50px;
	}
	//.left{}
	aside{
		background-color:lightgray;
		float:right;
		width:75%;
		height:80%;
		padding:20px 20px 130px 20px;
	}
	h2{
		text-align:center;
		margin-top:70px;
	}
	.bar{
		margin-top:70px;
		margin-left:385px;
	}
	#output{
		text-align:center;
		//padding-right:60px;
		margin-top:70px;
	}
	</style>

	<script>
		let num=Math.floor(Math.random()*100);
		function op(){
			document.getElementById("output").innerHTML=num;
			let ip=document.getElementById("input").value;
			if(ip==num){
				document.getElementById("output").innerHTML="You Guessed Correctly! Refresh the page to play again.";
			}
			else if(ip<num){
				document.getElementById("output").innerHTML="Try higher number";
			}
			else{
				document.getElementById("output").innerHTML="Try lower number";	
			}
	}
	</script>
